@page
@model eBookStoreClient.Pages.BookAuthors.DeleteModel
@{
}

<div class="card">
    <div class="card-body">
        <div class="card-text">
            <p>Are you sure you want to unassign this author?</p>
            <p>
                <div class="font-weight-bold">@Model.CartDetail.Author.FirstName @Model.CartDetail.Author.LastName</div>
                <div>AuthorOrder: @Model.CartDetail.AuthorOrder</div>
                <div>RoyaltyPercentage: @Model.CartDetail.RoyaltyPercentage</div>
            </p>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex flex-row">
            <form method="post">
                <input type="submit" value="Yes" class="btn btn-danger" />
            </form>
            <a asp-page="/BookAuthors/Details" class="btn btn-outline-primary ml-2">No</a>
        </div>
    </div>
</div>