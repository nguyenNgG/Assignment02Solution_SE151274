@page
@model eBookStoreClient.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Book.BookId" class="control-label"></label>
                <input asp-for="Book.BookId" class="form-control" />
                <span asp-validation-for="Book.BookId" class="text-danger"></span>
                <span class="text-danger">@Model.IdTakenMessage</span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Type" class="control-label"></label>
                <input asp-for="Book.Type" class="form-control" />
                <span asp-validation-for="Book.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PublisherId" class="control-label"></label>
                <select asp-for="Book.PublisherId" class ="form-control" asp-items="ViewBag.PublisherId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Advance" class="control-label"></label>
                <input asp-for="Book.Advance" class="form-control" />
                <span asp-validation-for="Book.Advance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Royalty" class="control-label"></label>
                <input asp-for="Book.Royalty" class="form-control" />
                <span asp-validation-for="Book.Royalty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.YearToDateSales" class="control-label"></label>
                <input asp-for="Book.YearToDateSales" class="form-control" />
                <span asp-validation-for="Book.YearToDateSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Notes" class="control-label"></label>
                <input asp-for="Book.Notes" class="form-control" />
                <span asp-validation-for="Book.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PublishedDate" class="control-label"></label>
                <input asp-for="Book.PublishedDate" class="form-control" />
                <span asp-validation-for="Book.PublishedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
