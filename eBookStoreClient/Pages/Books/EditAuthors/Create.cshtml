@page
@model eBookStoreClient.Pages.Books.EditAuthors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BookAuthor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookAuthor.BookId" value="@Model.BookId" />
            <div class="form-group">
                <label asp-for="BookAuthor.AuthorId" class="control-label"></label>
                <select asp-for="BookAuthor.AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                <span asp-validation-for="BookAuthor.AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookAuthor.AuthorOrder" class="control-label"></label>
                <input asp-for="BookAuthor.AuthorOrder" class="form-control" />
                <span asp-validation-for="BookAuthor.AuthorOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookAuthor.RoyaltyPercentage" class="control-label"></label>
                <input asp-for="BookAuthor.RoyaltyPercentage" class="form-control" />
                <span asp-validation-for="BookAuthor.RoyaltyPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
