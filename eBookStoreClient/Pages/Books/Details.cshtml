@page
@model eBookStoreClient.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Publisher.PublisherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Advance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Advance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Royalty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Royalty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.YearToDateSales)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.YearToDateSales)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.PublishedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.PublishedDate)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookAuthors[0].AuthorOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookAuthors[0].Author.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookAuthors[0].Author.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookAuthors[0].RoyaltyPercentage)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BookAuthors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoyaltyPercentage)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book.BookId">Edit</a> |
    <a asp-page="./EditAuthors/Index" asp-route-id="@Model.Book.BookId">Edit Authors</a> |
    <a asp-page="./Index">Back to List</a>
</div>
